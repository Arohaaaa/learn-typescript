{
    "include": [
        // 任意层级下的src目录下的所有文件
        "./src/**/*"
    ],
    "compilerOptions": {
        // 用来指定编译成的es版本
        "target": "ES6",
        // 用来指定模块化方式
        "module": "ES6",
        // 指定项目中使用到的库
        "lib": ["DOM", "ES6"],
        // 指定输出目录
        "outDir": "./dist",
        // 编译js
        "allowJs": true,
        // 是否以ts语法检查js文件
        "checkJs": true,
        // 是否移除注释
        "removeComments": true,
        // 不生成编译后的文件
        "noEmit": false,
        // 当有错误时不生成编译后的文件
        "noEmitOnError": true,

        // 严格检查的总开关，此项设置为true则以下几项都会生效
        "strict": true,
        // 是否使用严格模式
        "alwaysStrict": true,
        // 不允许隐式any类型
        "noImplicitAny": true,
        // 不允许不明确类型的this
        "noImplicitThis": true,
        // 严格检查控制
        "strictNullChecks": true
    }
}